<div style="position: absolute; right:200px">
<%= form_tag '/logout', method: "post" do %>
<%= submit_tag "Sign Out", :style => 'position: absolute; right: 5px; top: -40px' %>
<% end %>
</div>



<%= form_for @post, :class => 'ui form' do |f| %>
  <div class="field">
<label>Title</label>
<%= f.text_field :title, class: "form-control" %>
</div>
<br>
<div class="field">
<label><font color="white">Recipe</font></label>
<%= f.text_area :recipe, class: "form-control", :width => '200px' %>
</div>
<br>
<div class="field">
<label><font color="white">Image URL</font></label>
<%= f.text_field :img_url, class: "form_control" %>
</div>
<br>
<%= f.submit "Create Post", :class => 'ui button' %>
<% end %>

<br>
 <%= link_to "My Profile", user_path(@user), :class => 'ui button' %>

